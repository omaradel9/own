<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    <record model="ir.ui.view" id="freight.freight_form">
      <field name="name">Freight Form</field>
      <field name="model">freight.freight</field>
      <field name="arch" type="xml">
        <form>
        <sheet>
        <div class="oe_button_box" name="button_box">
                <button type="object" name="action_view_task" class="oe_stat_button" icon="fa-tasks">
                    <!-- <field name="sale_tmpl_id.tasks_count" widget="statinfo" string="Tasks"/> -->
                </button>
                <button type="object" name="action_view_project_ids" class="oe_stat_button" icon="fa-puzzle-piece" >
                    <!-- <field name="project_ids" invisible="1"/>
                    <field name="project_count" widget="statinfo" string="Projects"/> -->
                </button>
         </div>
        <group>
            <field name="sale_tmpl_id" domain="[('state', '=', 'uu')]" />
        </group>
        <group>
          <field name="cost" eval="0.0" />
          <field name="text" eval="0.0" />

        </group>
        </sheet>
        </form>
      </field>
    </record>
    
    <record model="ir.ui.view" id="freight.freight_list">
      <field name="name">Freight List</field>
      <field name="model">freight.freight</field>
      <field name="arch" type="xml">
        <tree>
          <field name="id"/>

          <field name="sale_tmpl_id"/>
          <field name="cost" eval="0.0" />
          
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="freight.freight_action_window">
      <field name="name">Freight Action</field>
      <field name="res_model">freight.freight</field>
      <field name="view_mode">tree,form</field>
    </record>
        
    <menuitem name="Freights" id="freight.freights"  action="freight.freight_action_window" parent="freight.menu_root"/>

    <record model="ir.ui.view" id="sale_order_view_inherit">
      <field name="name">sale.order.view.inherit1</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
         <xpath expr="//field[@name='partner_id']" position="after">
          
          <field name="contract"/>
          
        </xpath>
      </field>
    </record>

    </data>
    

</odoo>
