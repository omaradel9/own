<odoo>
  <data>


    <record model="ir.ui.view" id="sale_order_view_inherit">
      <field name="name">sale.order.view.inherit1</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
         <xpath expr="//group[@name='partner_details']" position="inside">
          
          <field name="sale_categ"/>
          
        </xpath>
        <xpath expr="//field[@name='payment_term_id']" position="after">
          <field name="sale_mode"/>
          <field name="field_invis" invisible="1"/>
          <field name="tesxt" invisible="1"/>

          
        </xpath>
         <xpath expr="//field[@name='pricelist_id']" position="attributes">
          <attribute name="required">False</attribute>
         </xpath>
        <xpath expr="//page[@name='customer_signature']" position="after">
          <!-- attrs="{'invisible': [('require_signature', '=', False)]}" -->
          <page string="Total Gold" name="total_gold" attrs="{'invisible':[('sale_categ', 'not in' ,('1','2','6','7'))]}">
            <group>
 
            <group>
              
              <field name="k9"/>
              <field name="k12"/>
              <field name="k14"/>
              <field name="k18"/>
              <field name="k21"/>
              <field name="k22"/>
              <field name="k24"/>


 
                </group>
                <group>
                <!-- karat f -->
                  <field name="c_karat"  readonly="1" force_save="1" />
                  


                </group>

            </group>
        </page>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="before">
          <field name="serial" attrs="{'column_invisible':[('parent.sale_categ', 'not in' , ('1','4','5','6'))]}" />
        </xpath>

       <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom']" position="after">
          <field name="making_price" readonly="1" force_save="1"  attrs="{'column_invisible':[('parent.sale_categ','not in' , ('1', '2','6','7'))]}"/>
       </xpath>

        


        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
          <field name="sale_sale"     invisible="1"/>
          <field name="karats"        attrs="{'column_invisible':[('parent.sale_categ','not in' , ('1', '2','6','7'))]}" force_save="1" readonly="1"/>
          <field name="c_karats"      attrs="{'column_invisible':[('parent.sale_categ','not in' , ('1', '2','6','7'))]}" force_save="1" readonly="1"/>
          <field name="gold_price"    attrs="{'column_invisible':[('parent.sale_categ','not in' , ('1', '2','6','7'))]}" force_save="1" readonly="1"/>
          <field name="weight"        attrs="{'readonly':[('parent.sale_categ', 'not in' , ('2', '3','7'))]}"            force_save="1"/>
          <field name="Stone_types"   attrs="{'column_invisible':[('parent.sale_categ', 'not in' , ('3', '4'))]}"        force_save="1" readonly="1"/>
          <field name="stone_size"    attrs="{'column_invisible':[('parent.sale_categ', 'not in' , ('3', '4'))]}"        force_save="1" readonly="1"/>
          <field name="stone_color"   attrs="{'column_invisible':[('parent.sale_categ', 'not in' , ('3', '4'))]}"        force_save="1" readonly="1"/>
          <field name="stone_config"  attrs="{'column_invisible':[('parent.sale_categ', 'not in' , ('4'))]}"             force_save="1" readonly="1"/>
          <field name="stone_style"   attrs="{'column_invisible':[('parent.sale_categ', 'not in' , ('3', '4'))]}"        force_save="1" readonly="1"/>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='name']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
          <!-- <attribute name="domain">[('sale_ok', '=', True)]</attribute> -->
          <!-- ([('sale_ok', '=', True), '|', ('company_id', '=', False), ('company_id', '=', parent.company_id),('item_cat', '=', parent.sale_categ)])) -->

          <attribute name="attrs">{'column_invisible':[('parent.sale_categ', 'not in' , ('1','2','3','4','5','6','7','8'))]
                                   ,'readonly':[('parent.sale_categ', 'not in' , ('2', '3','7'))]}</attribute>

        </xpath>

        <xpath expr="//page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
          <attribute name="readonly">1</attribute>
          <attribute name="force_save">1</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom_qty']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>
        <xpath expr="//page/field[@name='order_line']/tree/field[@name='tax_id']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>
         <xpath expr="//page/field[@name='order_line']/tree/field[@name='product_uom']" position="attributes">
          <attribute name="readonly">1</attribute>
        </xpath>
      </field>
    </record>
  
    <record model="ir.ui.view" id="sale_advance_payment_inv_inherit1">
      <field name="name">sale.advance.payment.inv.inherit</field>
      <field name="model">sale.advance.payment.inv</field>
      <field name="inherit_id" ref="sale.view_sale_advance_payment_inv"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='advance_payment_method']" position="after">
          <field name="karats" />
        </xpath>
        
      </field>
    </record> 




  </data>
</odoo>
