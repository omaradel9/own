<odoo>
  <data>
 <record model="ir.ui.view" id="stock_view_inherit">
      <field name="name">stock.view.inherit2</field>
      <field name="model">stock.move</field>
      <field name="inherit_id" ref="stock.view_stock_move_nosuggest_operations"/>
      <field name="arch" type="xml">
        <xpath expr="//label[@for='product_uom_qty']"  position="before">
          <field name="fixed_qty"/>
          <field name="hide" invisible="1"/>
          <field name="number_of_pieces" attrs="{'invisible': [('hide',  '=', True)]}" />
          <label for="seq"  attrs="{'invisible': [('hide',  '=', True)]}" />
          <div class="o_row" >
            <span><field name="seq" attrs="{'invisible': [('hide',  '=', True)]}" /></span>
            <span><button name="get_serial" type="object"  string="Create Serials" attrs="{'invisible': [('hide',  '=', True)]}" /></span>
          </div>
        </xpath>
      </field>
 </record>


 <record model="ir.ui.view" id="stock_view_inherit">
      <field name="name">stock.view.inherit</field>
      <field name="model">stock.production.lot</field>
      <field name="inherit_id" ref="stock.view_production_lot_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="before">
          <field name="product_categ" invisible="1"/>
          <field name="weight"         force_save="1" attrs="{'invisible': [('product_categ',  'in',  ('3', '4','5',False))]}" />
          <field name="stone_types"    force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('3', '4'))]}" />
          <field name="stone_size"     force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('3', '4'))]}" />
          <field name="stone_color"    force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('3', '4'))]}" />
          <field name="stone_config"   force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('4'))]}" />
          <field name="stone_style"    force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('3', '4'))]}" />
          <field name="sales_price"    force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('3', '4'))]}" />
          <field name="purchase_price" force_save="1" attrs="{'invisible': [('product_categ', 'not in',  ('3', '4'))]}" />
          <field name="stone_qty"     force_save="1" invisible ="1" />

        </xpath>
      </field>
 </record> 
   

 <record model="ir.ui.view" id="stock_view_inherit1">
      <field name="name">stock.view.inherit1</field>
      <field name="model">stock.production.lot</field>
      <field name="inherit_id" ref="stock.view_production_lot_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_id']" position="attributes">
          <attribute name="invisible">1</attribute>
          <attribute name="required">False</attribute>
        </xpath>
          
         <xpath expr="//page[@name='description']" position="attributes">
          <attribute name="invisible">1</attribute>
         </xpath>
         <xpath expr="//group[@name='sub_group']" position="after">
         <group  attrs="{'invisible': [('product_categ', 'not in', ('5'))]}"  >
          <div class="container">
            <separator string="Cost" colspan="2"/>
            <div class="row align-items-start">
              <div class="col">
                  <label for="cost_price"/>
              </div>
              <div class="col">
                <field name="cost_price" class="form-control"/>
            </div>
              <div class="col">
                  <label for="cost_price_gold"/>
              </div>
              <div class="col">
                <field name="cost_price_gold" class="form-control"/>
            </div>
            </div>
            <separator string="Ticket With Gold" colspan="2"/>
            <div class="row align-items-start">
              <div class="col">
                  <label for="retail_gold"/>
              </div>
              <div class="col">
                <field name="retail_gold" class="form-control"/>
            </div>
            <div class="col">
                <label for="whole_gold"/>
            </div>
              <div class="col">
                  <field name="whole_gold" class="form-control"/>
              </div>
            </div>
            <separator string="Ticket Without Gold" colspan="2"/>
            <div class="row align-items-start">
              <div class="col">
                <label for="retail_w_gold"/>
              </div>
              <div class="col">
                  <field name="retail_w_gold" class="form-control"/>
              </div>
              <div class="col">
                  <label for="whole_w_gold"/>
              </div>
              <div class="col">
                <field name="whole_w_gold" class="form-control"/>
              </div>
              
            </div>
          </div>

          </group>
        </xpath> 
        <xpath expr="//group[@name='main_group']" position="after">
          <notebook attrs="{'invisible': [('product_categ', 'not in', ('5'))]}">
            <page string="Calculation" name="calc_lines">
              <field name="calc_ids" widget="section_and_note_one2many" mode="tree,kanban" >
                  <form>
                      <field name="item_cat"    force_save="1"/>
                      <field name="item_groups" force_save="1" readonly="1"/>
                      <field name="Stone_types" force_save="1" attrs="{'invisible': [('item_cat', 'not in', ('3','4'))]}"/>
                      <field name="item_id"     force_save="1" widget="product_configurator" readonly="1"/>
                      <field name="qty"         force_save="1" attrs="{'invisible': [('item_cat', '=',False)]}"/>
                      <field name="count"       force_save="1" attrs="{'invisible': [('item_cat', 'not in', ('3','4'))]}"/>
                      <field name="size"        force_save="1" attrs="{'invisible': [('item_cat', 'not in', ('3','4'))]}" readonly="1"/>
                      <field name="price"       force_save="1" attrs="{'invisible': [('item_cat', '=',False)]}"  />
                  </form>
                  <tree string="Calculation Lines" editable="bottom">
                      <control>
                          <create name="add_product_control" string="add BOMs"/>
                      </control> 
                      <field name="item_cat" force_save="1" attrs="{'readonly': [('item_cat', '!=', False)]}"/>
                      <field name="item_groups" force_save="1" attrs="{'readonly': [('item_groups', '!=', False)]}"/>
                      <field name="Stone_types" force_save="1" readonly="1"/>
                      <field name="item_id" force_save="1" widget="product_configurator" readonly="1"/>
                      <field name="qty" force_save="1" attrs="{'invisible': [('item_cat', '=',False)]}" readonly="1"/>
                      <field name="consume_qty" force_save="1" attrs="{'invisible': [('item_cat', '=',False)]}"/>
                      <!-- <field name="golds_price" force_save="1" attrs="{'invisible': [('item_cat', 'not in', ('2'))]}"/> -->
                      <field name="count" force_save="1" attrs="{'invisible': [('item_cat', 'not in', ('3','4'))],'readonly': [('item_cat', 'not in', ('3','4'))]}"/>
                      <field name="size" force_save="1" attrs="{'invisible': [('item_cat', 'not in', ('3','4'))],'readonly': [('item_cat', 'not in', ('3','4','2'))]}"/>
                      <field name="price" force_save="1" attrs="{'invisible': [('item_cat', '=',False)]}" readonly="1"/>
                      <field name="sale_price" force_save="1"  readonly="1"/>
                      <field name="labor_price" force_save="1" readonly="1"/>
                  </tree>  
              </field>
            </page>
          </notebook>
        </xpath>
      </field>
    </record>
  
  
   
  </data>
</odoo>