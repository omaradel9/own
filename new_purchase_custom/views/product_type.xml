<odoo>
    <data>
      <!-- explicit list view definition -->
  
      <record model="ir.ui.view" id="prodcut_types">
        <field name="name">Product Type</field>
        <field name="model">product.type</field>
        <field name="arch" type="xml">
          <tree>
            <field name="active" widget="boolean_toggle"/>
            <field name="date"/>
            <field name="item_groupss"/>
            <field name="item_name"/>
            <field name="sale_categ"/>

            <field name="size_from"/>
            <field name="size_to"/>
            <field name="sale_price"/>
            <field name="labor_price"/>
            <field name="purchase_price"/>
            


          </tree>
        </field>
      </record>

     <record model="ir.ui.view" id="prodcut_typesform">
        <field name="name">Product Type</field>
        <field name="model">product.type</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
          <form string="Product Type">
            <sheet>
              <group >
                  <field name="active" widget="boolean_toggle"/>
                  <separator string="Stone Info" colspan="2"/>
                  <group>
                      
                      <field name="date"/>
                      <field name="item_groupss"/>
                      <field name="item_name"/>
                      <field name="sale_categ"/>
                      <field name="stone_size"    attrs="{'invisible':[('sale_categ', 'not in' , ('3', '4'))]}" force_save="1"/>
                      <field name="stone_color"   attrs="{'invisible':[('sale_categ', 'not in' , ('3', '4'))]}" force_save="1"/>
                      <field name="stone_config"  attrs="{'invisible':[('sale_categ', 'not in' , ('4'))]}"      force_save="1"/>
                      <field name="stone_style"   attrs="{'invisible':[('sale_categ', 'not in' , ('3', '4'))]}" force_save="1"/>
                      
                  </group>
                  <group>
                      <field name="size_from"/>
                      <field name="size_to"/>
                      <field name="sale_price"/>
                      <field name="labor_price"/>
                      <field name="purchase_price"/>
                  </group>
                  <group>
                      
                  </group>

              </group>
  
          </sheet>
          </form>
        </field>
      </record>
      <record model="ir.ui.view" id="stone_types">
        <field name="name">stoned Type</field>
        <field name="model">stones.type</field>
        <field name="arch" type="xml">
          <tree>
            <field name="type_name"/>
           
          </tree>
        </field>
      </record>
      <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="product_action_window">
          <field name="name">Product Type </field>
          <field name="res_model">product.type</field>
          <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="stone_action_window">
          <field name="name">stone Type </field>
          <field name="res_model">stones.type</field>
          <field name="view_mode">tree,form</field>
        </record>
  
      <!-- Top menu item -->
      <menuitem name="Product Type Name" id="product.menu" parent="stock.menu_stock_inventory_control" action="product_action_window" />
      <!-- <menuitem name="Stone Type" id="stone" parent="stock.menu_stock_inventory_control" action="stone_action_window" /> -->

      
  
  
  
  
  
  
     
  
  
    </data>
  </odoo>